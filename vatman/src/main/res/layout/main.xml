<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:padding="0dp" android:layout_height="fill_parent">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:padding="5dp" android:id="@+id/search_container">
		<ImageView android:id="@+id/icon_view_mode" 
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="center" android:contentDescription="@string/description_modes_button">
		</ImageView>
		<AutoCompleteTextView android:id="@+id/autocomplete_stop"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginLeft="5dp" android:textSize="14sp"
			android:textColor="#000" android:textColorHighlight="#fff"
			android:textColorHint="#000" android:inputType="textAutoComplete|textNoSuggestions"/>
	</LinearLayout>
	<ListView android:id="@+id/main_view" android:layout_width="fill_parent"
		android:layout_height="0dip" android:isScrollContainer="true"
		android:layout_weight="0.6"></ListView>
</LinearLayout>